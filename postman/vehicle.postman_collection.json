{
	"info": {
		"_postman_id": "a755bf6f-a40f-4d14-a080-5834571017ad",
		"name": "Vehicle_API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Events",
			"item": [
				{
					"name": "Create Event",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () { ",
									"  pm.response.to.have.status(201);",
									"});",
									""
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.globals.set(\"timestamp\", new Date().getTime());"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-Vin",
								"value": "{{vin1}}",
								"type": "string"
							},
							{
								"key": "X-Pin",
								"value": "{{vehiclePin}}",
								"type": "string"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"vin\": \"{{vin1}}\",\n    \"timestamp\": {{timestamp}},\n    \"eventCode\": \"FAULT\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "https://{{vehicleApi}}.execute-api.{{region}}.amazonaws.com/{{stage}}/vehicle/events",
							"protocol": "https",
							"host": [
								"{{vehicleApi}}",
								"execute-api",
								"{{region}}",
								"amazonaws",
								"com"
							],
							"path": [
								"{{stage}}",
								"vehicle",
								"events"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Events",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () { ",
									"  pm.response.to.have.status(200);",
									"});",
									"",
									"const json = pm.response.json();",
									"const items = json.length;",
									"",
									"pm.test(\"Number of items is non-zero\", function () {",
									"    pm.expect(items).to.be.above(0);",
									"});",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Vin",
								"value": "{{vin1}}",
								"type": "string"
							},
							{
								"key": "X-Pin",
								"value": "{{vehiclePin}}",
								"type": "string"
							}
						],
						"url": {
							"raw": "https://{{vehicleApi}}.execute-api.{{region}}.amazonaws.com/{{stage}}/vehicle/events",
							"protocol": "https",
							"host": [
								"{{vehicleApi}}",
								"execute-api",
								"{{region}}",
								"amazonaws",
								"com"
							],
							"path": [
								"{{stage}}",
								"vehicle",
								"events"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Event",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () { ",
									"  pm.response.to.have.status(200);",
									"});",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Vin",
								"value": "{{vin1}}",
								"type": "string"
							},
							{
								"key": "X-Pin",
								"value": "{{vehiclePin}}",
								"type": "string"
							}
						],
						"url": {
							"raw": "https://{{vehicleApi}}.execute-api.{{region}}.amazonaws.com/{{stage}}/vehicle/events/{{timestamp}}",
							"protocol": "https",
							"host": [
								"{{vehicleApi}}",
								"execute-api",
								"{{region}}",
								"amazonaws",
								"com"
							],
							"path": [
								"{{stage}}",
								"vehicle",
								"events",
								"{{timestamp}}"
							]
						}
					},
					"response": []
				}
			]
		}
	]
}